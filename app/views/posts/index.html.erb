<h1>Post</h1>
<a href="/logout">logout</a>

<% @posts.each do |post| %>
  <h1><%= post.title.capitalize %></h1>
  <p><%= post.body.titleize %></p>
  <p><%= link_to 'Show', post_path(post) %></p>
  <p><%= link_to 'Destroy', post_path(post), 
    method: :delete, data: { confirm: 'Are you sure?' } %></p>
<% end %>
